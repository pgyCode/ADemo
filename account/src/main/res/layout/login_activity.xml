<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical">
    
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@null"
        android:id="@+id/img_icon"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_icon"
        android:text="有赞零售"
        android:id="@+id/txt_name"
        android:textColor="@color/text_normal"
        android:layout_marginTop="30dp"
        android:textSize="@dimen/text_size_big"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center"
        android:id="@+id/txt_title_account"
        android:textSize="@dimen/text_size_middle"
        android:textColor="@color/text_normal"
        android:text="账号"/>



    <EditText
        android:layout_width="0px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_account"
        app:layout_constraintStart_toEndOf="@+id/txt_title_account"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        android:layout_height="60dp"
        android:gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_account"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="bottom"
        android:textSize="@dimen/text_size_middle"
        android:textColor="@color/text_normal"
        android:id="@+id/pass_title_account"
        android:text="密码"/>

    <EditText
        android:layout_width="0px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/edt_pass"
        app:layout_constraintStart_toEndOf="@+id/pass_title_account"
        app:layout_constraintTop_toBottomOf="@+id/edt_account"
        android:layout_height="60dp"
        android:gravity="center"/>

    <Button
        android:layout_width="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/MAIN"
        android:textColor="@color/WHITE"
        android:text="登录"
        android:textSize="@dimen/text_size_big"
        android:layout_marginTop="30dp"
        android:id="@+id/btnLogin"
        app:layout_constraintTop_toBottomOf="@+id/edt_pass"
        android:layout_height="50dp" />

</android.support.constraint.ConstraintLayout>